<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit a Park Post</h1>
    <div class="col-6 offset-3">
        <form action="/parks/<%=park._id%>?_method=PUT" method="POST" class="validated-form" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="name" class="form-label">New Name</label>
                <input name='title' type="text" class="form-control" id="name" value="<%=park.title%>" required>

                <div class="valid-feedback">looks good</div>
            </div>
            <!--            margin-bottom-->
            <div class="mb-3">
                <label for="loc" class="form-label">New Location</label>
                <input name="location" type="text" class="form-control" id="loc" value="<%=park.location%>" required>
            </div>

            <div class="mb-3">
                <label for="loc" class="form-label">New Price </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                           aria-describedby="price-label" name="price" value="<%=park.price %>"
                           required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">New Description</label>
                <textarea class="form-control" type="text" id="description" name="description"
                          required><%= park.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>

            <div class="mb-3">
<!--                forEach() 方法用于调用数组的每个元素，并将元素传递给回调函数, 参数1: 数组内容, 参数2: index-->
                <%park.images.forEach((img, i)=>{%>
                    <img src="<%=img.url%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="img-<%=i%>" name="deleteImages" value="<%=img.filename%>">
                    </div>
                    <label for="img-<%=i%>">Delecte Image?</label>
                <%})%>
            </div>
            <div>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>



